{
  "expo": {
    "name": "Shoe Store",
    "slug": "shoe_store",
    "description": "This is an E-commerce application for shoes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/sneakers.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#f28022"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
